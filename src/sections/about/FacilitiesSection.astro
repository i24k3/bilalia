---

import ClosingNote from "../../components/ClosingNote.astro";

const facilitiesList = [
  { 
    title: "Main Masjid", 
    desc: "Spacious prayer hall accommodating 500+ worshippers with separate sections." 
  },
  { 
    title: "Classrooms", 
    desc: "Well-ventilated classrooms equipped with modern teaching aids." 
  },
  { 
    title: "Student Hostels", 
    desc: "Comfortable residential facilities for 550+ students." 
  },
  { 
    title: "Dining Hall", 
    desc: "Clean and hygienic dining facility serving nutritious meals." 
  }
];
---

<section class="py-28 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6">

    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-black text-gray-900 leading-snug">
        Our Facilities
      </h2>
      <p class="mt-4 text-gray-500 text-base sm:text-lg max-w-2xl mx-auto leading-relaxed">
        Thoughtfully designed spaces built to nurture learning, worship, and community.
      </p>
    </div>

    <!-- Facilities Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-8">
      {facilitiesList.map(facility => (
        <div class="bg-white rounded-2xl shadow-sm p-6 hover:shadow-md transition-shadow duration-300">
          <h3 class="text-gray-900 font-semibold text-xl mb-2">{facility.title}</h3>
          <p class="text-gray-700 text-sm md:text-base leading-relaxed">{facility.desc}</p>
        </div>
      ))}
    </div>

    <!-- Closing Note -->
    <ClosingNote/>


  </div>
</section>

