---
const facilitiesList = [
  { 
    title: "Main Masjid", 
    desc: "Spacious prayer hall accommodating 500+ worshippers with separate sections." 
  },
  { 
    title: "Classrooms", 
    desc: "Well-ventilated classrooms equipped with modern teaching aids." 
  },
  { 
    title: "Student Hostels", 
    desc: "Comfortable residential facilities for 550+ students." 
  },
  { 
    title: "Dining Hall", 
    desc: "Clean and hygienic dining facility serving nutritious meals." 
  }
];
---

<section class="py-56 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4">

    <!-- Section Header -->
    <h2 class="text-5xl md:text-6xl font-black text-black  text-center tracking-tight mb-20">
      Our Facilities
    </h2>

    <!-- Minimal Table -->
    <div class="overflow-x-auto">
      <table class="w-full border-collapse text-left">
        <thead>
          <tr class="border-b border-gray-300">
            <th class="px-4 py-3 text-sm font-medium text-gray-800">Facility</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-800">Description</th>
          </tr>
        </thead>
        <tbody>
          {facilitiesList.map((f, idx) => (
            <tr class={`border-b border-gray-200 hover:bg-gray-100 transition-colors duration-200 ${idx % 2 === 0 ? "bg-white" : "bg-gray-50"}`}>
              <td class="px-4 py-3 text-gray-900 font-medium">{f.title}</td>
              <td class="px-4 py-3 text-gray-700">{f.desc}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Closing Note -->
    <div class="text-center mt-12">
      <p class="text-gray-500 text-sm italic tracking-wide">
        Every corner built with barakah and excellence â€¢ Established 1991
      </p>
    </div>

  </div>
</section>

