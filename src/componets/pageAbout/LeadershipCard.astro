---
const { member } = Astro.props;
---

<div class="group bg-white border border-gray-100 rounded-3xl transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:border-gray-200">
  <div class="p-10 text-center">

    <!-- Member Image -->
    <div class="relative w-32 h-32 mx-auto mb-8 rounded-full overflow-hidden border border-gray-200 bg-gray-100 shadow-lg transition-transform duration-500 group-hover:scale-105">
      {member.image ? (
        <img
          src={member.image}
          alt={member.name}
          class="w-full h-full object-cover"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-400 text-xs tracking-widest uppercase">
          No Image
        </div>
      )}
    </div>

    <!-- Name -->
    <h3 class="text-xl font-black text-gray-900 tracking-tight leading-tight">
      {member.name}
    </h3>

    <!-- Position -->
    <p class="mt-2 text-sm font-medium text-emerald-700 tracking-wide">
      {member.position}
    </p>

    <!-- Divider -->
    <div class="w-16 h-px bg-gradient-to-r from-transparent via-amber-400 to-transparent mx-auto my-6"></div>

    <!-- Description -->
    <p class="text-gray-600 text-sm leading-relaxed max-w-xs mx-auto">
      {member.description}
    </p>

  </div>
</div>

