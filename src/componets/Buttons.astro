---
const {
  href,
  text,
  type = "primary", // primary | secondary | tertiary | minimal
} = Astro.props;

const base =
  "inline-flex items-center justify-center font-bold tracking-wide rounded-full transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 relative overflow-hidden";
  
let classes;

if (type === "primary") {
  classes = `
    ${base}
    px-12 py-4
    bg-emerald-600 text-white
    shadow-lg shadow-emerald-600/20
    hover:bg-emerald-700
    hover:shadow-xl hover:shadow-emerald-600/30
    hover:-translate-y-0.5
    active:translate-y-0
  `;
} 
else if (type === "secondary") {

classes=`
${base}
transition 
transform 
font-semibold 
rounded-lg 
shadow-sm 
hover:shadow-md 
duration-300 
text-white 
bg-emerald-600 
hover:bg-emerald-700 
px-6 py-3 
hover:-translate-y-0.5"
`;

} 
else if (type === "secondary-long") {

classes=`
${base}
block w-full transition transform font-semibold rounded-lg shadow-sm hover:shadow-md duration-300 text-white bg-emerald-600 hover:bg-emerald-700 py-4 text-lg rounded-lg
`;

}
else if (type === "tertiary") {
  classes = `

    ${base}
    px-11 py-4
    bg-white text-gray-800
    border border-gray-200
    shadow-sm
    hover:bg-gray-50
    hover:border-gray-300
    hover:text-emerald-600
    hover:-translate-y-0.5
    hover:shadow-md
  `;
}

---

<a href={href} class={classes}>
  {text}
</a>

