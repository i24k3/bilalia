---
const {
  href,
  text,
  type = "primary", // primary | secondary | secondary-long | tertiary | minimal | outlined | ghost
} = Astro.props;

const base = `
  inline-flex items-center justify-center
  font-bold tracking-wide
  rounded-full transition-all duration-300
  focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2
  relative overflow-hidden
`;

let classes;

switch (type) {
  case "primary":
    classes = `
      ${base}
      px-12 py-4
      bg-emerald-600 text-white
      shadow-lg shadow-emerald-600/20
      hover:bg-emerald-700 hover:shadow-xl hover:shadow-emerald-600/30
      hover:-translate-y-0.5
      active:translate-y-0
    `;
    break;

  case "secondary":
    classes = `
      ${base}
      px-6 py-3
      bg-emerald-600 text-white
      rounded-lg shadow-sm
      font-semibold
      hover:bg-emerald-700 hover:shadow-md
      hover:-translate-y-0.5
      active:translate-y-0
    `;
    break;

  case "secondary-long":
    classes = `
      ${base}
      block w-full py-4 text-lg
      bg-emerald-600 text-white
      font-semibold rounded-lg
      shadow-sm hover:shadow-md
      hover:bg-emerald-700
      hover:-translate-y-0.5
    `;
    break;

  case "tertiary":
    classes = `
      ${base}
      px-11 py-4
      bg-white text-gray-800
      border border-gray-200
      shadow-sm
      hover:bg-gray-50
      hover:border-gray-300
      hover:text-emerald-600
      hover:-translate-y-0.5
      hover:shadow-md
    `;
    break;

  case "minimal":
    classes = `
      ${base}
      px-6 py-3
      text-emerald-600 font-semibold
      bg-transparent
      hover:text-emerald-700
      hover:underline
    `;
    break;

  case "outlined":
    classes = `
      ${base}
      px-8 py-3
      text-emerald-600 font-semibold
      bg-transparent border-2 border-emerald-600
      rounded-lg
      hover:bg-emerald-50
      hover:border-emerald-700
      hover:text-emerald-700
    `;
    break;

  case "ghost":
    classes = `
      ${base}
      px-6 py-2
      bg-transparent text-gray-800
      hover:bg-gray-100 hover:text-emerald-600
      rounded-full
    `;
    break;

  default:
    classes = `${base} px-6 py-3 text-gray-800 `;
}
---

<a href={href} class={classes}>
  {text}
</a>

