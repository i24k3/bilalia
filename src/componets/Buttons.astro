---
const {
  href,
  text,
  type = "primary", // primary | secondary | tertiary | minimal
} = Astro.props;

const base =
  "font-semibold rounded-2xl transition-all duration-200 text-center inline-block";

// Define classes per type
let classes;

if (type === "primary") {
  classes = `${base} py-4 px-12 bg-emerald-600 text-white hover:bg-emerald-700 shadow-sm`;
} else if (type === "secondary") {
  classes = `${base} py-4 px-10 border border-emerald-600 text-emerald-600 bg-white hover:bg-emerald-50 shadow-sm`;
} else if (type === "tertiary") {
  classes = `${base} py-4 px-10 border border-gray-300 text-gray-700 bg-white hover:bg-gray-100 shadow-sm`;
} else if (type === "minimal") {
  classes = `${base} py-3 px-6 text-gray-600 hover:text-emerald-600 bg-transparent shadow-none`;
}
---

<a href={href} class={classes}>
  {text}
</a>

