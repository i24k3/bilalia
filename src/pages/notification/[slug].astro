---
export const prerender = false;

import BaseLayout from "../../layout/BaseLayout.astro";
import NotFound from "../../componets/NotFound.astro";
import ClosingNote from "../../componets/ClosingNote.astro";

import { supabase } from "../../lib/supabase.js";
import DOMPurify from "isomorphic-dompurify";

const { slug } = Astro.params;



const button404 = [
  { href: "/", text: "Goto Home", type: "primary" },
  { href: "/notifications/1", text: "Explore Notifications", type: "tertiary" },
];


const { data: post, error } = await supabase
  .from('notifications')
  .select('*')
  .eq('url_slug', slug)
  .single();

if (error) console.error("Supabase fetch error:", error);

const formattedDate = post
  ? new Date(post.date_onsite).toLocaleDateString("en-GB", {
      day: "numeric",
      month: "long",
      year: "numeric",
    })
  : null;

// Sanitize HTML fields
const safeBody = post?.body ? DOMPurify.sanitize(post.body) : "";
const safeUrdu = post?.urdu_translation ? DOMPurify.sanitize(post.urdu_translation) : "";
---
<BaseLayout>

{!post ? (

        <NotFound buttons={button404} />
) : (
  <div class="min-h-screen bg-gray-50 pt-11">
    <div class="container mx-auto px-4 sm:px-6 pt-20 sm:pt-28 pb-12 sm:pb-16 max-w-5xl">
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-200">

        {/* HEADER */}
        <div class="px-6 sm:px-12 pt-12 sm:pt-16 pb-10 sm:pb-12 bg-white border-b border-gray-200">
          <a
                  href="/notifications/1"
            class="inline-flex items-center gap-3 text-gray-500 hover:text-black font-medium text-base sm:text-lg mb-8 sm:mb-10 transition group"
          >
            <svg
              class="w-5 h-5 transition-transform group-hover:-translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
            </svg>
            All Notifications 
          </a>

          {/* Badges */}
          <div class="flex flex-wrap items-center gap-3 sm:gap-5 mb-6">
            {post.featured && (
              <span class="px-4 py-2 bg-black text-white rounded-full text-xs font-bold tracking-wider uppercase shadow-sm">
                Featured
              </span>
            )}
            <span class="px-5 py-2 bg-gray-100 text-gray-800 rounded-full text-xs sm:text-sm font-semibold tracking-wider uppercase border border-gray-200">
              {post.category || "Update"}
            </span>
          </div>

          {/* Title */}
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-black leading-tight">
            {post.title}
          </h1>

          {/* Meta */}
          <div class="flex flex-wrap items-center gap-6 sm:gap-8 mt-8 text-gray-500 text-base sm:text-lg">
            <div class="flex items-center gap-3">
              <svg
                class="w-5 h-5 sm:w-6 sm:h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
              <span class="font-medium">{formattedDate}</span>
            </div>

            {post.author && (
              <div class="flex items-center gap-3">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
                <span>{post.author}</span>
              </div>
            )}
          </div>
        </div>

        {/* FEATURED IMAGE */}
        {post.image_url && (
          <div class="px-6 sm:px-12 py-8 sm:py-12">
            <div class="rounded-2xl overflow-hidden shadow-xl border border-gray-200">
              <img
                src={post.image_url}
                alt={post.title}
                class="w-full h-64 sm:h-80 md:h-96 lg:h-[560px] object-cover"
              />
            </div>
          </div>
        )}

        {/* BODY CONTENT */}
        <div class="px-6 sm:px-12 pb-16 sm:pb-20 pt-8 sm:pt-10 max-w-4xl mx-auto space-y-16 sm:space-y-20">
          {/* Opening */}
          <section>
            <h2 class="text-3xl sm:text-4xl font-bold text-black mb-6 border-l-8 border-emerald-600 pl-4 sm:pl-6">
              {post.opening_titlle || "Notification"}
            </h2>
            <p class="text-lg sm:text-xl leading-relaxed text-gray-800">
              {post.opening || post.excerpt || "We are pleased to share this important update with our community and stakeholders."}
            </p>
          </section>

          {/* Main Body */}
          <section>
            <h2 class="text-3xl sm:text-4xl font-bold text-black mb-6 border-l-8 border-emerald-600 pl-4 sm:pl-6">
              {post.body_title || "Details"}
            </h2>
            <div
              class="prose prose-lg max-w-none text-gray-800 leading-loose text-justify space-y-6 text-base sm:text-lg"
              set:html={safeBody}
            ></div>
          </section>

          {/* URDU SECTION */}
          {safeUrdu && (
            <section class="bg-gray-50 rounded-3xl p-8 sm:p-12 border-l-8 border-emerald-600 shadow-inner">
              <h2 class="text-3xl sm:text-4xl font-bold text-black mb-8 sm:mb-10 text-right font-urdu">
                اردو ترجمہ
              </h2>
              <div
                class="text-right space-y-6 text-lg leading-loose text-gray-800 font-urdu"
                set:html={safeUrdu}
              ></div>
            </section>
          )}

          {/* SubhanAllah */}
          <div class="text-center py-10 sm:py-16 border-t border-gray-200">
              <ClosingNote/>
          </div>


        </div>

      </div>
    </div>
  </div>
)}
</BaseLayout>

