---
import BaseLayout from "../layout/BaseLayout.astro";
import NotFound from "../components/NotFound.astro";
import ClosingNote from "../components/ClosingNote.astro";

const myData = {
  quote: "لَا تَقْنَطُوا مِن رَّحْمَةِ اللَّهِ — Never despair of Allah’s mercy.",
  translation: "This page does not exist. Pause and remember Allah, the Most Merciful.",
  source: "Qur’an 39:53",
};

const myButtons = [
  { href: "/", text: "Home", type: "primary" },
  { href: "/lectures/video/1", text: "View Lectures", type: "tertiary" },
];
---

<BaseLayout>
  <!-- Full-screen wrapper -->
  <div class="min-h-screen flex flex-col items-center justify-center bg-gray-50">
    <NotFound data={myData} buttons={myButtons} centered={true} />
    <ClosingNote/>
  </div>
</BaseLayout>

