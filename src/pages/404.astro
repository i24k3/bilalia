---
import Buttons from "../componets/Buttons.astro";
import BaseLayout from "../layout/BaseLayout.astro";

const data = {
  title: "404 — Page Not Found",
  quote: "We couldn't find the page you're looking for.",
  translation: "It seems the page has moved or never existed.",
  source: "",
};

const buttons = [
  { href: "/", text: "Go Home", type: "primary" },
  { href: "/academics", text: "Explore Academics", type: "tertiary" },
];
---

<BaseLayout>

<div class="min-h-screen bg-gray-50 pt-20 sm:pt-28 pb-12 sm:pb-16 flex items-center justify-center">

  <div class="container mx-auto px-4 sm:px-6 max-w-4xl">

    <div class="bg-white rounded-3xl shadow-2xl border border-gray-200 overflow-hidden">

      {/* HEADER */}
      <div class="px-6 sm:px-12 pt-12 sm:pt-16 pb-10 sm:pb-12 text-center">
        <h1 class="text-7xl sm:text-9xl font-black text-black mb-6 tracking-tighter">
          404
        </h1>
        <p class="text-2xl sm:text-3xl text-gray-800 font-semibold mb-4">
          {data.quote}
        </p>
        <p class="text-lg sm:text-xl text-gray-500 mb-8">
          {data.translation}
        </p>
      </div>

      {/* BUTTONS */}
      <div class="flex flex-col sm:flex-row justify-center gap-6 px-6 sm:px-12 pb-12 sm:pb-16">
        {buttons.map((btn) => (
          <Buttons href={btn.href} text={btn.text} type={btn.type} />
        ))}
      </div>

      {/* FOOTER */}
      <div class="text-center px-6 sm:px-12 pb-12 sm:pb-16 border-gray-200 text-gray-500 text-xs sm:text-sm tracking-widest uppercase">
        Darul Uloom Bilaliya • Established 1991
      </div>

    </div>
    
  </div>

</div>

</BaseLayout>

