---
export const prerender = true;

import BaseLayout from "../layout/BaseLayout.astro";

// Content object for easy updates
const donationContent = {
header: {
title: "Support Our Work",
subtitle:
"Your support helps us continue our mission of education, service, and community development. Every contribution makes a meaningful difference."
},
bankDetails: {
sectionTitle: "Bank Transfer Details",
details: [
{ label: "Account Name", value: "Darul Uloom Bilaliya" },
{ label: "Account Number", value: "123456789012", monospace: true },
{ label: "Bank Name", value: "State Bank of India" },
{ label: "IFSC Code", value: "SBIN0001234", monospace: true }
]
},
upi: {
sectionTitle: "UPI & QR Code",
upiId: "donation@upi",
phone: "+91 98765 43210",
qrImage: "/images/upi-qr.png",
description:
"You can scan the QR code using any UPI app such as Google Pay, PhonePe, Paytm, or BHIM."
},
onlinePayment: {
sectionTitle: "Online Payment",
options: [
{
label: "Pay via Razorpay",
href: "https://razorpay.me/yourlink",
style: "primary"
},
{
label: "Other Payment Options",
href: "https://your-donation-link.com",
style: "secondary"
}
]
},
trustNote:
"All donations are used responsibly and transparently to support our educational and community initiatives.",
footer: "Darul Uloom Bilaliya â€¢ Serving the Ummah with Integrity"
};
---

<BaseLayout>
    <div class="min-h-screen bg-gray-50">
        <div class="container mx-auto px-4 sm:px-6 pt-20 sm:pt-28 pb-16 max-w-5xl">

            {/* CARD */}
            <div class="bg-white rounded-3xl border border-gray-200 overflow-hidden">

                {/* HEADER */}
                <div class="px-6 sm:px-12 pt-12 sm:pt-16 pb-10 border-b border-gray-200">
                    <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-black leading-tight">
                        {donationContent.header.title}
                    </h1>
                    <p class="mt-6 text-lg sm:text-xl text-gray-600 max-w-3xl">
                    {donationContent.header.subtitle}
                    </p>

                    {/* TRUST NOTE */}
                    <section class="bg-gray-50 rounded-3xl p-8 sm:p-12 border border-gray-200 text-center mt-12">
                        <p class="text-xl sm:text-2xl text-gray-700 leading-relaxed max-w-3xl mx-auto">
                        {donationContent.trustNote}
                        </p>
                    </section>


                </div>

                {/* CONTENT */}
                <div class="px-6 sm:px-12 py-12 sm:py-16 space-y-16">

                    {/* BANK DETAILS */}
                    <section class="border border-gray-200 rounded-2xl p-10">
                        <h2 class="text-3xl sm:text-4xl font-bold text-black mb-8 border-l-8 border-emerald-600 pl-4 sm:pl-6">
                            {donationContent.bankDetails.sectionTitle}
                        </h2>

                        <div class="grid sm:grid-cols-2 gap-8 text-lg text-gray-800">
                            {donationContent.bankDetails.details.map((item) => (
                            <div>
                                <p class="font-semibold text-gray-500 uppercase tracking-wider text-sm mb-1">
                                {item.label}
                                </p>
                                <p class={item.monospace ? "font-mono text-xl" : ""}>{item.value}</p>
                            </div>
                            ))}
                        </div>
                    </section>


                    {/* UPI + QR */}
                    <section class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center border border-gray-200 rounded-2xl p-6 md:p-10">
                        <div>
                            <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-black mb-4 sm:mb-6 border-l-4 md:border-l-8 border-emerald-600 pl-3 sm:pl-4 md:pl-6">
                                {donationContent.upi.sectionTitle}
                            </h2>

                            <div class="space-y-4 sm:space-y-6 text-base sm:text-lg text-gray-800">
                                <div>
                                    <p class="text-gray-500 uppercase tracking-wider text-xs sm:text-sm font-semibold">
                                    UPI ID
                                    </p>
                                    <p class="font-mono text-lg sm:text-xl">{donationContent.upi.upiId}</p>
                                </div>

                                <div>
                                    <p class="text-gray-500 uppercase tracking-wider text-xs sm:text-sm font-semibold">
                                    Phone (UPI Enabled)
                                    </p>
                                    <p class="font-mono text-lg sm:text-xl">{donationContent.upi.phone}</p>
                                </div>

                                <p class="text-gray-600 text-sm sm:text-base">{donationContent.upi.description}</p>
                            </div>
                        </div>

                        {/* QR IMAGE */}
                        <div class="flex justify-center mt-6 md:mt-0">
                            <div class="bg-gray-50 border border-gray-200 rounded-2xl p-4 md:p-6 shadow-inner">
                                <img
                                        src={donationContent.upi.qrImage}
                                        alt="UPI QR Code"
                                        class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 object-contain"
                                        />
                            </div>
                        </div>
                    </section>





                    {/* FOOTER */}
                    <div class="text-center pt-8 border-t border-gray-200">
                        <p class="text-gray-500 text-xs sm:text-sm tracking-widest uppercase">
                        {donationContent.footer}
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</BaseLayout>

