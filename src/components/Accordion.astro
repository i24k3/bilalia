---
/**
 * Props:
 * index: number
 * title: string
 * desc: string
 * open?: boolean
 */
const { index = 1, title, desc, open = false } = Astro.props;
---

<details
  class="group bg-white rounded-2xl border border-gray-400 shadow-sm open:shadow-md transition"
  {...(open ? { open: true } : {})}
>
  <summary
    class="
      cursor-pointer list-none
      flex items-center justify-between
      gap-6
      p-5 sm:p-6
    "
  >
    <div class="flex items-center gap-5">
      <!-- Number -->
      <span
        class="
          shrink-0
          w-10 h-10
          rounded-full
          bg-black text-white
          flex items-center justify-center
          font-black
          shadow
        "
      >
        {index}
      </span>

      <!-- Title -->
      <h3 class="text-lg sm:text-xl font-bold text-black">
        {title}
      </h3>
    </div>

    <!-- Chevron -->
    <svg
      class="w-5 h-5 text-gray-500 transition-transform duration-300 group-open:rotate-180"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2.5"
        d="M19 9l-7 7-7-7"
      />
    </svg>
  </summary>

  <!-- Content -->
  <div class="px-5 sm:px-6 pb-6 pt-0 sm:pt-1">
    <p class="text-gray-700 text-sm sm:text-base leading-relaxed max-w-3xl pl-14">
      {desc}
    </p>
  </div>
</details>

